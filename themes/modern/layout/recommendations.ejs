<!-- 推荐文章页面 -->
<div class="recommendations-page">
  <div class="container">
    <!-- 页面头部 -->
    <div class="recommendations-header">
      <h1 class="recommendations-title">推荐文章</h1>
      <p class="recommendations-subtitle">精选优质内容，每期推荐最新文章</p>
    </div>

    <!-- 筛选和排序 -->
    <div class="recommendations-controls">
      <div class="filter-group">
        <label for="category-filter">分类:</label>
        <select id="category-filter" class="filter-select">
          <option value="">全部分类</option>
          <% 
            site.categories.forEach(function(cat) {
          %>
            <option value="<%= cat.name %>"><%= cat.name %></option>
          <% 
            });
          %>
        </select>
      </div>

      <div class="filter-group">
        <label for="sort-filter">排序:</label>
        <select id="sort-filter" class="filter-select">
          <option value="latest">最新发布</option>
          <option value="oldest">最早发布</option>
          <option value="title">按标题</option>
        </select>
      </div>
    </div>

    <!-- 推荐文章列表 -->
    <div class="recommendations-list">
      <% 
        // 获取所有文章并按日期排序
        let posts = site.posts.sort('date', -1).toArray();
        
        if (posts.length > 0) {
          posts.forEach(function(post, index) {
      %>
        <article class="recommendation-item" data-category="<%= post.categories.length > 0 ? post.categories.data[0].name : '' %>">
          <div class="recommendation-card">
            <!-- 左侧：序号和日期 -->
            <div class="recommendation-number">
              <span class="number-badge"><%= String(index + 1).padStart(2, '0') %></span>
              <span class="number-date"><%= date(post.date, 'MM/DD') %></span>
            </div>

            <!-- 中间：内容 -->
            <div class="recommendation-content">
              <div class="recommendation-meta">
                <% if (post.categories && post.categories.length > 0) { %>
                  <span class="recommendation-category">
                    <i class="fas fa-folder"></i> <%= post.categories.data[0].name %>
                  </span>
                <% } %>
                <span class="recommendation-date">
                  <i class="fas fa-calendar"></i> <%= date(post.date, 'YYYY-MM-DD') %>
                </span>
              </div>
              
              <h3 class="recommendation-title">
                <a href="<%= url_for(post.path) %>"><%= post.title %></a>
              </h3>
              
              <% if (post.description || post.excerpt) { %>
                <p class="recommendation-excerpt">
                  <%= (post.description || strip_html(post.excerpt)).substring(0, 150) %>...
                </p>
              <% } %>

              <div class="recommendation-tags">
                <% if (post.tags && post.tags.length > 0) { %>
                  <% post.tags.limit(3).forEach(function(tag) { %>
                    <span class="recommendation-tag"><%= tag.name %></span>
                  <% }) %>
                <% } %>
              </div>
            </div>

            <!-- 右侧：封面和按钮 -->
            <div class="recommendation-side">
              <% if (post.cover) { %>
                <div class="recommendation-cover">
                  <img src="<%= post.cover %>" alt="<%= post.title %>" />
                  <div class="cover-overlay">
                    <i class="fas fa-arrow-right"></i>
                  </div>
                </div>
              <% } else { %>
                <div class="recommendation-cover default-cover">
                  <i class="fas fa-file-alt"></i>
                </div>
              <% } %>
              
              <a href="<%= url_for(post.path) %>" class="recommendation-read-btn">
                阅读 <i class="fas fa-chevron-right"></i>
              </a>
            </div>
          </div>
        </article>
      <% 
          });
        } else {
      %>
        <div class="recommendations-empty">
          <i class="fas fa-inbox"></i>
          <h3>暂无推荐文章</h3>
          <p>敬请期待更多精彩内容</p>
        </div>
      <% 
        }
      %>
    </div>

    <!-- 统计信息 -->
    <div class="recommendations-stats">
      <div class="stat-item">
        <span class="stat-number"><%= site.posts.length %></span>
        <span class="stat-label">总文章数</span>
      </div>
      <div class="stat-item">
        <span class="stat-number"><%= site.categories.length %></span>
        <span class="stat-label">分类数</span>
      </div>
      <div class="stat-item">
        <span class="stat-number"><%= site.tags.length %></span>
        <span class="stat-label">标签数</span>
      </div>
    </div>
  </div>
</div>

<style>
/* 推荐文章页面样式 */
.recommendations-page {
  padding: 3rem 0;
  background: #f8f9fa;
  min-height: 100vh;
}

.recommendations-header {
  text-align: center;
  margin-bottom: 3rem;
  padding: 2rem 0;
}

.recommendations-title {
  font-size: 2.5rem;
  font-weight: 800;
  color: #1e293b;
  margin-bottom: 0.5rem;
}

.recommendations-subtitle {
  font-size: 1.1rem;
  color: #64748b;
}

/* 筛选控制 */
.recommendations-controls {
  display: flex;
  gap: 2rem;
  margin-bottom: 2rem;
  flex-wrap: wrap;
}

.filter-group {
  display: flex;
  align-items: center;
  gap: 0.75rem;
}

.filter-group label {
  font-weight: 600;
  color: #333;
  white-space: nowrap;
}

.filter-select {
  padding: 0.5rem 1rem;
  border: 1px solid #ddd;
  border-radius: 8px;
  background: white;
  font-size: 0.95rem;
  cursor: pointer;
  transition: border-color 0.3s;
}

.filter-select:hover,
.filter-select:focus {
  border-color: #667eea;
  outline: none;
}

/* 推荐列表 */
.recommendations-list {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
  margin-bottom: 3rem;
}

.recommendation-item {
  animation: fadeIn 0.5s ease-in;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.recommendation-card {
  background: white;
  border-radius: 12px;
  padding: 1.5rem;
  display: grid;
  grid-template-columns: 80px 1fr 200px;
  gap: 1.5rem;
  align-items: center;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
  transition: all 0.3s;
  border-left: 4px solid #667eea;
}

.recommendation-card:hover {
  box-shadow: 0 8px 20px rgba(0, 0, 0, 0.12);
  transform: translateY(-2px);
}

/* 序号 */
.recommendation-number {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 0.5rem;
}

.number-badge {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  width: 50px;
  height: 50px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 700;
  font-size: 1.2rem;
}

.number-date {
  font-size: 0.85rem;
  color: #999;
  font-weight: 600;
}

/* 内容 */
.recommendation-content {
  display: flex;
  flex-direction: column;
  gap: 0.75rem;
}

.recommendation-meta {
  display: flex;
  align-items: center;
  gap: 1rem;
  font-size: 0.85rem;
}

.recommendation-category {
  background: #f0f0f0;
  color: #667eea;
  padding: 0.25rem 0.75rem;
  border-radius: 12px;
  font-weight: 600;
  display: inline-flex;
  align-items: center;
  gap: 0.3rem;
  width: fit-content;
}

.recommendation-date {
  color: #999;
  display: flex;
  align-items: center;
  gap: 0.3rem;
}

.recommendation-title {
  margin: 0;
  font-size: 1.2rem;
  font-weight: 700;
  color: #1e293b;
}

.recommendation-title a {
  color: inherit;
  text-decoration: none;
  transition: color 0.3s;
}

.recommendation-title a:hover {
  color: #667eea;
}

.recommendation-excerpt {
  margin: 0;
  color: #666;
  font-size: 0.95rem;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.recommendation-tags {
  display: flex;
  gap: 0.5rem;
  flex-wrap: wrap;
}

.recommendation-tag {
  background: #f0f0f0;
  color: #666;
  padding: 0.25rem 0.6rem;
  border-radius: 8px;
  font-size: 0.75rem;
  font-weight: 500;
}

/* 右侧 */
.recommendation-side {
  display: flex;
  flex-direction: column;
  gap: 1rem;
  align-items: center;
}

.recommendation-cover {
  width: 150px;
  height: 100px;
  border-radius: 8px;
  overflow: hidden;
  position: relative;
  background: #f0f0f0;
}

.recommendation-cover img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.3s;
}

.recommendation-cover:hover img {
  transform: scale(1.05);
}

.cover-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: opacity 0.3s;
}

.recommendation-cover:hover .cover-overlay {
  opacity: 1;
}

.cover-overlay i {
  color: white;
  font-size: 1.5rem;
}

.recommendation-cover.default-cover {
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.recommendation-cover.default-cover i {
  color: white;
  font-size: 2rem;
}

.recommendation-read-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  padding: 0.6rem 1.2rem;
  border-radius: 8px;
  text-decoration: none;
  font-weight: 600;
  font-size: 0.9rem;
  transition: all 0.3s;
  display: inline-flex;
  align-items: center;
  gap: 0.4rem;
  width: 100%;
  justify-content: center;
}

.recommendation-read-btn:hover {
  transform: translateY(-2px);
  box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
}

/* 空状态 */
.recommendations-empty {
  text-align: center;
  padding: 3rem;
  color: #999;
}

.recommendations-empty i {
  font-size: 3rem;
  margin-bottom: 1rem;
  opacity: 0.5;
}

.recommendations-empty h3 {
  margin: 0 0 0.5rem 0;
  color: #666;
}

.recommendations-empty p {
  margin: 0;
}

/* 统计信息 */
.recommendations-stats {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
  gap: 1.5rem;
  padding: 2rem;
  background: white;
  border-radius: 12px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
}

.stat-item {
  text-align: center;
  padding: 1rem;
}

.stat-number {
  display: block;
  font-size: 2rem;
  font-weight: 800;
  color: #667eea;
  margin-bottom: 0.5rem;
}

.stat-label {
  display: block;
  font-size: 0.9rem;
  color: #666;
}

/* 响应式设计 */
@media (max-width: 1024px) {
  .recommendation-card {
    grid-template-columns: 70px 1fr 150px;
    gap: 1rem;
    padding: 1rem;
  }

  .recommendation-cover {
    width: 120px;
    height: 80px;
  }

  .recommendations-title {
    font-size: 2rem;
  }
}

@media (max-width: 768px) {
  .recommendation-card {
    grid-template-columns: 1fr;
    gap: 1rem;
  }

  .recommendation-number {
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
  }

  .number-badge {
    width: 40px;
    height: 40px;
    font-size: 1rem;
  }

  .recommendation-side {
    flex-direction: row;
    justify-content: space-between;
    width: 100%;
  }

  .recommendation-cover {
    width: 100px;
    height: 70px;
  }

  .recommendation-read-btn {
    width: auto;
    padding: 0.5rem 1rem;
  }

  .recommendations-controls {
    flex-direction: column;
    gap: 1rem;
  }

  .filter-group {
    width: 100%;
  }

  .filter-select {
    width: 100%;
  }

  .recommendations-title {
    font-size: 1.5rem;
  }

  .recommendations-subtitle {
    font-size: 1rem;
  }
}
</style>
