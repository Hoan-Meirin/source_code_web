<div class="tag-container">
  <div class="tag-header">
    <div class="header-content">
      <h1 class="tag-title">
        <i class="fas fa-tag"></i>
        <%= page.tag %>
      </h1>
      <p class="tag-desc">
        <span class="article-count"><%= page.posts.length %> 篇文章</span>
        <span class="tag-breadcrumb">
          <a href="/tags/">返回标签</a>
        </span>
      </p>
    </div>
  </div>

  <div class="tag-content">
    <div class="posts-container">
      <% if (page.posts.length > 0) { %>
        <div class="posts-list">
          <% page.posts.sort('date', -1).forEach(function(post, index) { %>
            <article class="post-card">
              <div class="post-card-number"><%= index + 1 %></div>
              
              <% if (post.cover) { %>
                <div class="post-card-cover">
                  <a href="<%= url_for(post.path) %>">
                    <img src="<%= post.cover %>" alt="<%= post.title %>" />
                  </a>
                </div>
              <% } %>
              
              <div class="post-card-content">
                <div class="post-card-meta">
                  <span class="post-date">
                    <i class="fas fa-calendar"></i>
                    <%= date(post.date, 'YYYY-MM-DD') %>
                  </span>
                  <% if (post.categories && post.categories.length > 0) { %>
                    <span class="post-category">
                      <i class="fas fa-folder"></i>
                      <%= post.categories.data[0].name %>
                    </span>
                  <% } %>
                  <% if (post.updated && post.updated.toString() !== post.date.toString()) { %>
                    <span class="post-updated">
                      <i class="fas fa-edit"></i>
                      更新于 <%= date(post.updated, 'MM-DD') %>
                    </span>
                  <% } %>
                </div>
                
                <h2 class="post-card-title">
                  <a href="<%= url_for(post.path) %>"><%= post.title %></a>
                </h2>
                
                <% if (post.description || post.excerpt) { %>
                  <p class="post-card-excerpt">
                    <%= post.description || strip_html(post.excerpt).substring(0, 150) %>
                  </p>
                <% } %>
                
                <div class="post-card-footer">
                  <% if (post.tags && post.tags.length > 0) { %>
                    <div class="post-tags">
                      <% post.tags.limit(3).forEach(function(tag) { %>
                        <a href="<%= url_for(tag.path) %>" class="tag-link"><%= tag.name %></a>
                      <% }) %>
                    </div>
                  <% } %>
                  <a href="<%= url_for(post.path) %>" class="read-more">
                    阅读 <i class="fas fa-arrow-right"></i>
                  </a>
                </div>
              </div>
            </article>
          <% }) %>
        </div>
      <% } else { %>
        <div class="empty-posts">
          <i class="fas fa-inbox"></i>
          <h3>暂无文章</h3>
          <p>该标签下还没有文章</p>
        </div>
      <% } %>
    </div>
  </div>
  
  <div class="tag-nav">
    <a href="/tags/" class="back-btn">
      <i class="fas fa-arrow-left"></i> 返回标签列表
    </a>
  </div>
</div>

<style>
.tag-container {
  max-width: 900px;
  margin: 0 auto;
  padding: 2rem;
}

.tag-header {
  text-align: center;
  margin-bottom: 3rem;
  padding-bottom: 2rem;
  border-bottom: 2px solid #e5e7eb;
}

.header-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 1rem;
}

.tag-title {
  font-size: 2.5rem;
  font-weight: 700;
  color: #1e293b;
  margin: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 1rem;
}

.tag-title i {
  color: #2563eb;
}

.tag-desc {
  color: #64748b;
  font-size: 1rem;
  display: flex;
  align-items: center;
  gap: 1.5rem;
  justify-content: center;
  flex-wrap: wrap;
}

.article-count {
  font-weight: 600;
  color: #2563eb;
}

.tag-breadcrumb a {
  color: #2563eb;
  text-decoration: none;
  font-weight: 500;
  transition: color 0.3s;
}

.tag-breadcrumb a:hover {
  color: #1d4ed8;
  text-decoration: underline;
}

.tag-content {
  margin-bottom: 3rem;
}

.posts-list {
  display: flex;
  flex-direction: column;
  gap: 2rem;
}

.post-card {
  display: flex;
  gap: 2rem;
  background: white;
  border-radius: 16px;
  overflow: hidden;
  box-shadow: 0 4px 20px rgba(0,0,0,0.1);
  transition: all 0.3s;
  position: relative;
}

.post-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 8px 30px rgba(0,0,0,0.15);
}

.post-card-number {
  position: absolute;
  top: 1rem;
  left: 1rem;
  width: 40px;
  height: 40px;
  background: linear-gradient(135deg, #2563eb, #1d4ed8);
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 700;
  font-size: 1.1rem;
  z-index: 10;
}

.post-card-cover {
  flex-shrink: 0;
  width: 250px;
  height: 200px;
  overflow: hidden;
  position: relative;
}

.post-card-cover img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.3s;
}

.post-card:hover .post-card-cover img {
  transform: scale(1.1);
}

.post-card-content {
  flex: 1;
  padding: 2rem;
  display: flex;
  flex-direction: column;
}

.post-card-meta {
  display: flex;
  gap: 1.5rem;
  margin-bottom: 1rem;
  font-size: 0.85rem;
  color: #64748b;
  flex-wrap: wrap;
}

.post-date,
.post-category,
.post-updated {
  display: flex;
  align-items: center;
  gap: 0.25rem;
}

.post-card-title {
  margin-bottom: 1rem;
  margin-top: 0;
}

.post-card-title a {
  color: #1e293b;
  text-decoration: none;
  font-size: 1.5rem;
  font-weight: 600;
  transition: color 0.3s;
  line-height: 1.4;
}

.post-card-title a:hover {
  color: #2563eb;
}

.post-card-excerpt {
  color: #64748b;
  line-height: 1.6;
  margin-bottom: 1.5rem;
  flex: 1;
  font-size: 0.95rem;
}

.post-card-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 1rem;
  flex-wrap: wrap;
}

.post-tags {
  display: flex;
  gap: 0.5rem;
  flex-wrap: wrap;
}

.tag-link {
  font-size: 0.8rem;
  padding: 0.4rem 0.8rem;
  background: #f0f4f8;
  color: #2563eb;
  border-radius: 20px;
  text-decoration: none;
  transition: all 0.3s;
}

.tag-link:hover {
  background: #e0f2fe;
  color: #1d4ed8;
}

.read-more {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  color: #2563eb;
  text-decoration: none;
  font-weight: 500;
  padding: 0.75rem 1.5rem;
  border: 2px solid #2563eb;
  border-radius: 25px;
  transition: all 0.3s;
  white-space: nowrap;
}

.read-more:hover {
  background: #2563eb;
  color: white;
  transform: translateX(3px);
}

.read-more i {
  transition: transform 0.3s;
}

.read-more:hover i {
  transform: translateX(2px);
}

.empty-posts {
  text-align: center;
  padding: 4rem 2rem;
  color: #64748b;
}

.empty-posts i {
  font-size: 4rem;
  margin-bottom: 1rem;
  color: #cbd5e1;
}

.empty-posts h3 {
  font-size: 1.5rem;
  margin-bottom: 0.5rem;
  color: #475569;
}

.tag-nav {
  text-align: center;
  padding-top: 2rem;
  border-top: 1px solid #e5e7eb;
}

.back-btn {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  color: #64748b;
  text-decoration: none;
  font-weight: 500;
  padding: 0.75rem 1.5rem;
  border: 2px solid #e5e7eb;
  border-radius: 25px;
  transition: all 0.3s;
}

.back-btn:hover {
  color: #2563eb;
  border-color: #2563eb;
  transform: translateX(-3px);
}

.back-btn i {
  transition: transform 0.3s;
}

.back-btn:hover i {
  transform: translateX(-2px);
}

@media (max-width: 768px) {
  .tag-container {
    padding: 1rem;
  }
  
  .tag-title {
    font-size: 2rem;
    flex-direction: column;
    gap: 0.5rem;
  }
  
  .tag-desc {
    flex-direction: column;
    gap: 0.5rem;
  }
  
  .post-card {
    flex-direction: column;
    gap: 0;
  }
  
  .post-card-number {
    top: 0.5rem;
    left: 0.5rem;
    width: 35px;
    height: 35px;
    font-size: 0.9rem;
  }
  
  .post-card-cover {
    width: 100%;
    height: 200px;
  }
  
  .post-card-content {
    padding: 1.5rem;
    padding-top: 2rem;
  }
  
  .post-card-meta {
    flex-direction: column;
    gap: 0.5rem;
  }
  
  .post-card-footer {
    flex-direction: column;
    align-items: flex-start;
  }
  
  .read-more {
    width: 100%;
    justify-content: center;
  }
}
</style>